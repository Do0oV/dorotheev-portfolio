{% extends 'admin/base-admin.html.twig' %}

{% block title %}New Project{% endblock %}

	{% block body %}
		<div class="edit container">
			<h2>New Project</h2>
			<a href="{{ path('admin') }}"><button class="btn btn-primary btn-sm">BACK</button></a>
			{{ form_start(form) }}

			{{ form_errors(form) }}

			{{ form_row(form.name) }}
			{{ form_row(form.image) }}
			{{ form_row(form.content) }}
			{{ form_row(form.github) }}
			{{ form_row(form.live) }}
			{{ form_row(form.techno) }}
			{{ form_row(form.date) }}
			{{ form_row(form.display) }}

			<button class="btn btn-warning btn-sm">{{ button_label|default('save') }}</button>

			{{ form_end(form) }}
		</div>


	{% endblock %}

