{% extends 'admin/base-admin.html.twig' %}

{% block title %}{% endblock %}

	{% block body %}


		<div class="example-wrapper">
			<h1>Projects</h1>


			<table>
				<tr>
					<th>id</th>
					<th>name</th>
					<th>image</th>
					<th>content</th>
					<th>github</th>
					<th>live</th>
					<th>techno</th>
					<th>date</th>
					<th>delete</th>
				</tr>
				{% for project in projects %}
					
					<tr>
						<td>{{ project.id }}</td>
						<td>{{ project.name }}</td>
						<td>{{ project.image }}</td>
						<td>{{ project.content }}</td>
						<td>{{ project.github }}</td>
						<td>{{ project.live }}</td>
						<td>{{ project.techno }}</td>
						<td>{{ project.date }}</td>
						<td><a href="{{ 'project/delete' }}/{{ project.id }}">DELETE</a></td>
					</tr>

				{% endfor %}
			</table>
			<a href="{{ 'add/' }}" role="button">Add a project</a>

		</div>
	{% endblock %}