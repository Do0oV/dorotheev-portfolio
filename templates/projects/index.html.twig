
{% block body %}
    <button class="btn table" id="project" style="">PROJECTS</button>
            <div class="table" id="project-list">

                <div class="row header green">
                    <div class="cell">
                        Id
                    </div>
                    <div class="cell">
                        Name
                    </div>
                    <div class="cell">
                        Image
                    </div>
                    <div class="cell">
                        Content
                    </div>
                    <div class="cell">
                        Github
                    </div>
                    <div class="cell">
                        Live
                    </div>
                    <div class="cell">
                        Techno
                    </div>
                    <div class="cell">
                        Date
                    </div>
                    <div class="cell">
                        Display
                    </div>
                    <div class="cell">
                        Actions
                    </div>
                </div>

                {% for project in projects %}

                    <div class="row" >
                        <div class="cell" data-title="Id">
                            {{ project.id }}
                        </div>
                        <div class="cell" data-title="Name">
                            {{ project.name }}
                        </div>
                        <div class="cell" data-title="Image">
                            {{ project.image }}
                        </div>
                        <div class="cell" data-title="Content">
                            {{ project.content }}
                        </div>
                        <div class="cell" data-title="Github">
                            {{ project.github }}
                        </div>
                        <div class="cell" data-title="Live">
                            {{ project.live }}
                        </div>
                        <div class="cell" data-title="Techno">
                            {{ project.techno }}
                        </div>
                        <div class="cell" data-title="Date">
                            {{ project.date }}
                        </div>
                        <div class="cell" data-title="Display">
                            {{ project.display ? 'Yes' : 'No' }}
                        </div>
                        <div class="cell" data-title="action">
                            {{ include('projects/_delete_form.html.twig') }}
                            <a href="{{ path('projects_edit', {'id': project.id}) }}"><button class="btn btn-secondary btn-sm">EDIT</button></a>
                        </div>
                    </div>

                {% else %}

                    <div class="row" >
                        <div class="cell" data-title="Id">
                            no records found
                        </div>
                    </div>

                {% endfor %}

                <div class="">
                    <a href="{{ path('projects_new') }}"><button class="btn btn-success" style="width:100%">ADD</button></a>
                </div>
            </div>
{% endblock %}