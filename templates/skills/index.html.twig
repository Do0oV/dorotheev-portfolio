

{% block body %}
    <button class="btn table" id="skill" style="">SKILLS</button>
    <div class="table" id="skill-list">


        <div class="row header purple">
            <div class="cell">
                Id
            </div>
            <div class="cell">
                Name
            </div>
            <div class="cell">
                Image
            </div>
            <div class="cell">
                Genre
            </div>
            <div class="cell">
                Actions
            </div>
        </div>

        {% for skill in skills %}

            <div class="row" >
                <div class="cell" data-title="Id">
                    {{ skill.id }}
                </div>
                <div class="cell" data-title="Name">
                    {{ skill.name }}
                </div>
{#                 <div class="cell" data-title="Image">
                    {{ skill.image }}
                </div> #}
                 <div class="cell" data-title="Image">
                   <img src="{{ asset('upload/') }}{{ skill.image }}" alt="alt image" style="width:40px;height:auto;">
                </div>
                <div class="cell" data-title="Content">
                    {{ skill.genre }}
                </div>
                <div class="cell" data-title="action">
                    {{ include('skills/_delete_form.html.twig') }}
                    <a href="{{ path('skills_edit', {'id': skill.id}) }}"><button class="btn btn-secondary btn-sm">EDIT</button></a>
                </div>
            </div>

        {% else %}

            <div class="row" >
                <div class="cell" data-title="Id">
                    no records found
                </div>
            </div>

        {% endfor %}

        <div class="">
            <a href="{{ path('skills_new') }}"><button class="btn btn-success" style="width:100%">ADD</button></a>
        </div>
    </div>
{% endblock %}