{% extends 'admin/base-admin.html.twig' %}

{% block title %}{% endblock %}

	{% block body %}


		<div class="example-wrapper">
			<h1>Skills</h1>


			<table>
				<tr>
					<th>id</th>
					<th>name</th>
					<th>image</th>
					<th>genre</th>
					<th>delete</th>
				</tr>
				{% for skill in skills %}
					
					<tr>
						<td>{{ skill.id }}</td>
						<td>{{ skill.name }}</td>
						<td>{{ skill.image }}</td>
						<td>{{ skill.genre }}</td>
						<td><a href="{{ 'skills/delete' }}/{{ skill.id }}">DELETE</a></td>
					</tr>

				{% endfor %}
			</table>
			<a href="{{ 'add/' }}" role="button">Add a skill</a>

		</div>
	{% endblock %}
