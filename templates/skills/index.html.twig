{% extends 'admin/base-admin.html.twig' %}

{% block title %}Skills index{% endblock %}

    {% block body %}
        <a href="{{ path('admin') }}">Back to Admin</a>
        
        <h1>Skills index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Genre</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for skill in skills %}
                    <tr>
                        <td>{{ skill.id }}</td>
                        <td>{{ skill.name }}</td>
                        <td>{{ skill.image }}</td>
                        <td>{{ skill.genre }}</td>
                        <td>
                            <a href="{{ path('skills_show', {'id': skill.id}) }}">show</a>
                            <a href="{{ path('skills_edit', {'id': skill.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('skills_new') }}">Create new</a>
    {% endblock %}