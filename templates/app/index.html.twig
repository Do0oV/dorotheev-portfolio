	</section>

	<section class="mydiv" id="aboutMe">
		<div class="container">
			<h2>ABOUT ME</h2>

			{% for about in abouts %}
				<div class="row info">
					<div class="col-md-8">
						<p>
							{{ about.text | raw }}
							<span class="signature">.Doroth√©e Viard</span>
						</p>
					</div>

					<div class="col-md-4">
						<img src="{{ asset('upload/') }}{{ about.image }}" alt="Dorothee Viard" class="img-fluid rounded-circle">
					</div>
				</div>
				<a href="{{ asset('upload/') }}{{ about.resume }}" target="_blank"><button class="btn-cv">GRAB MY RESUME</button></a>
			{% endfor %}

		</div>

	</section>

	<section class="mydiv" id="skills">
		<h2>I DO</h2>

		<div class="icon-container container">
			<div class="img-items ">

				{% for skill in skills %}
					{% if skill.genre == 'full' %}
						<img src="{{ asset('upload/') }}{{ skill.image }}" alt="{{ skill.name }} logo">
					{% endif %}
				{% endfor %}
			</div>
			<div class="img-items ">
				{% for skill in skills %}
					{% if skill.genre == 'back' %}
						<img src="{{ asset('upload/') }}{{ skill.image }}" alt="{{ skill.name }} logo">
					{% endif %}
				{% endfor %}
			</div>
			<div class="img-items-other ">
				{% for skill in skills %}
					{% if skill.genre == 'tools' %}
						<img src="{{ asset('upload/') }}{{ skill.image }}" alt="{{ skill.name }} logo">
					{% endif %}
				{% endfor %}
				{% for skill in skills %}
					{% if skill.genre == 'other' %}
						<img src="{{ asset('upload/') }}{{ skill.image }}" alt="{{ skill.name }} logo">
					{% endif %}
				{% endfor %}
			</div>

		</div>


	</section>

	<section class="mydiv" id="projects">
		<h2>PORTFOLIO</h2>

		<div id="portfolio" class="row cover">
			<div class="container">
				<div class="row portfolio-projects"> <!-- Two project row-->
					{% for project in projects %}   
						<div class="col-lg-6 item"> <!--1st side project -->
							<div class="row"> 
								<div class="col-sm-6 text-center col-desc">
									<h3 class="portfolio-projects--title">{{ project.name }}</h3>
									<p class="portfolio-projects--desc">{{ project.content }}</p>
									<p class="portfolio-projects--desc">{{ project.techno }}</p>
									{% if project.live != '#' %}
										<a class="btn btn-rounded portfolio-projects--btn" href="{{ project.live }}" target="_blank">Demo</a>
									{% endif %}
									{% if project.live == '#' %}
										<p class="btn btn-rounded portfolio-projects--btn" data-toggle="tooltip" data-placement="top" title="Not available :( ">Demo</p>
									{% endif %}
									{% if project.github != '#' %}
										<a class="btn btn-rounded portfolio-projects--btn" href="{{ project.github }}" target="_blank" role="button">Code</a>
									{% endif %}
									{% if project.github == '#' %}
										<p class="btn btn-rounded portfolio-projects--btn" data-toggle="tooltip" data-placement="top" title="Not available :( ">Code</p>
									{% endif %}
								</div>
								<div class="col-sm-6 text-center col-img">
									<img class="portfolio-projects--image" src="{{ asset('upload/') }}{{ project.image }}" alt="{{ project.name }} image" data-text="{{ project.content }}">
								</div>

							</div>
						</div>
					{% endfor %}
					{% for more_project in more_projects %}
						<div class="col-lg-6 item"> <!--1st side project -->
							<div class="row show-more"> 
								<div class="col-sm-6 text-center col-desc">
									<h3 class="portfolio-projects--title">{{ more_project.name }}</h3>
									<p class="portfolio-projects--desc">{{ more_project.content }}</p>
									<p class="portfolio-projects--desc">{{ more_project.techno }}</p>
									{% if more_project.live != '#' %}
										<a class="btn btn-rounded portfolio-projects--btn" href="{{ more_project.live }}" target="_blank">Demo</a>
									{% endif %}
									{% if more_project.live == '#' %}
										<p class="btn btn-rounded portfolio-projects--btn" data-toggle="tooltip" data-placement="top" title="Not available :( ">Demo</p>
									{% endif %}
									{% if more_project.github != '#' %}
										<a class="btn btn-rounded portfolio-projects--btn" href="{{ more_project.github }}" target="_blank" role="button">Code</a>
									{% endif %}
									{% if more_project.github == '#' %}
										<p class="btn btn-rounded portfolio-projects--btn" data-toggle="tooltip" data-placement="top" title="Not available :( ">Github</p>
									{% endif %}
								</div>
								<div class="col-sm-6 text-center col-img">
									<img class="portfolio-projects--image" src="{{ asset('upload/') }}{{ more_project.image }}" alt="{{ more_project.name }} image" data-text="{{ more_project.content }} {{ more_project.content }} {{ more_project.content }} {{ more_project.content }} {{ more_project.content }} {{ more_project.content }} {{ more_project.content }}">
								</div>
							</div>
						</div>
					{% endfor %}
				</div><!--end Opposite Two project row--> 
				<!-- The Modal -->
				<div id="myModal" class="modal">

					<!-- The Close Button -->
					<span class="close">&times;</span>

					<!-- Modal Content (The Image) -->
					<img class="modal-content" id="img01">

					<!-- Modal Caption (Image Text) -->
					<div id="caption"></div>
					<div id="caption1"><p></p></div>

				</div>
			</div>
		</div>
		<div class="more">
			<button class="btn-more">Show more</button>

		</div>


	</section>
	<section class="mydiv" id="contact">
		<h2>GET IN TOUCH</h2>
		{% include 'flash_messages.html.twig' %}
		<div id="form">

			<form id="full" name="message" method="post" autocomplete="off">

				<label for="message_email">EMAIL
					<input type="email" id="message_email" name="message[email]" required="required" />
				</label>

				<label for="message_message" class="">MESSAGE
					<textarea id="message_message" name="message[message]" required="required"></textarea>
				</label>
				<div class="g-recaptcha" data-sitekey="6Lc0xm0UAAAAAOKqqbxZ7gAbXexHLsES5MV-8pAJ"></div>


				<button class="btn-send">Send</button>

			</form>
		</div>

		<div class="icon-bottom">
			<a href="https://github.com/Do0oV" target="_blank"><img class="git-bottom" src="{{ asset('build/images/github.svg')}}" alt=""></a>
			<a href=""><img class="none-bottom" src="{{ asset('build/images/linkedin.svg')}}" alt=""></a>
			<a href="https://www.linkedin.com/in/dorotheeviard/" target="_blank" ><img class="link-bottom" src="{{ asset('build/images/linkedin.svg')}}" alt=""></a>
		</div>
	</section>
{% endblock %}
