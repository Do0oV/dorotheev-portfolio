	<section class="mydiv" id="aboutMe">
		<div class="container">
			<h2>ABOUT ME</h2>

			{% for about in abouts %}
				<div class="row info">
					<div class="col-md-8">
						<p>
							{{ about.text | raw }}
							<span class="signature">.Doroth√©e Viard</span>
						</p>
					</div>

					<div class="col-md-4">
						<img src="{{ asset('upload/') }}{{ about.image }}" alt="Dorothee Viard" class="img-fluid rounded-circle">
					</div>
				</div>
			{% endfor %}
			<button class="btn-cv">GRAB MY RESUME</button>
		</div>

	</section>

	<section class="mydiv" id="skills">
		<h2>I DO</h2>

		<div class="icon-container container">
			<div class="img-items ">

				{% for skill in skills %}
					{% if skill.genre == 'full' %}
						<img src="{{ asset('upload/') }}{{ skill.image }}" alt="">
					{% endif %}
				{% endfor %}
			</div>
			<div class="img-items ">
				{% for skill in skills %}
					{% if skill.genre == 'back' %}
						<img src="{{ asset('upload/') }}{{ skill.image }}" alt="">
					{% endif %}
				{% endfor %}
			</div>
			<div class="img-items-other ">
				{% for skill in skills %}
					{% if skill.genre == 'tools' %}
						<img src="{{ asset('upload/') }}{{ skill.image }}" alt="">
					{% endif %}
				{% endfor %}
				{% for skill in skills %}
					{% if skill.genre == 'other' %}
						<img src="{{ asset('upload/') }}{{ skill.image }}" alt="">
					{% endif %}
				{% endfor %}
			</div>

		</div>


	</section>

