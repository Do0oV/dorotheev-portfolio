{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

	{% block body %}
		<header>
			<div class="hamburger">
				<span></span>
				<span></span>
				<span></span>
			</div>
			<div id="myNav" class="overlay">
				<div class="overlay-content">
					<a href="#header">Home</a>
					<a href="#aboutMe">About me</a>
					<a href="#projects">Projects</a>
					<a href="#skills">Skills</a>
					<a href="#resume-front">Resume</a>
					<a href="#contact">Contact</a>
				</div>
			</div> 
		</header>
		

		<section class="mydiv" id="header">

			<div class="inner-div">
				<h1 class="">DOROTHEE VIARD</h1>
				<h2 class="">Web Developer</h2>
			</div>
			<div class="social">
				<a href="https://github.com/Do0oV" target="_blank"><img class="git" src="{{ asset('build/images/github.svg')}}" alt=""></a>
				<a href="#contact"><img  class="email" src="{{ asset('build/images/email.svg')}}" alt=""></a>
				<a href="https://www.linkedin.com/in/dorotheeviard/" target="_blank"><img class="link" src="{{ asset('build/images/linkedin.svg')}}" alt=""></a>

			</div>
			<div class="scroll-icon">
				<svg version="1.1" id="icn" fill="#fff" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
				width="40px" height="50px" viewBox="0 0 40 40" enable-background="new 0 0 40 40" xml:space="preserve">
				<polygon opacity="0" points="19.9,21 0,1.3 1.4,0 19.9,18.3 38.6,0 40,1.3 "><animate id="first" attributeName="opacity" attributeType="XML" dur="3s" from="1" to="0" repeatCount="indefinite"  begin="0"/></polygon>
				<polygon id="arrow-two" opacity="0"  points="19.9,30.9 0,11.2 1.4,9.9 19.9,28.2 38.6,9.8 40,11.2 "><animate id="second" attributeName="opacity" attributeType="XML" dur="3s" from="1" to="0" repeatCount="indefinite"  begin="1s" /></polygon>
				<polygon id="arrow-three"  opacity="0" points="19.9,40 0,20.3 1.4,19 19.9,37.3 38.6,19 40,20.3 "><animate id="third" attributeName="opacity" attributeType="XML" dur="3s" from="1" to="0" repeatCount="indefinite"  begin="2s"  /></polygon>
			</svg>
		</div>

	</section>

	<section class="mydiv" id="aboutMe">
		<div class="container">
			<h2>ABOUT ME</h2>

			{% for about in abouts %}
				<div class="row info">
					<div class="col-md-8">
						<p>
							{{ about.text | raw }}
							<span class="signature">.Doroth√©e Viard</span>
						</p>
					</div>

					<div class="col-md-4">
						<img src="{{ asset('upload/') }}{{ about.image }}" alt="Dorothee Viard" class="img-fluid rounded-circle">
					</div>
				</div>
			{% endfor %}
			<button class="btn-cv">GRAB MY RESUME</button>
		</div>

	</section>

	<section class="mydiv" id="skills">
		<h2>I DO</h2>

			<div class="icon-container container">
				{% for skill in skills %}
					<img src="{{ asset('upload/') }}{{ skill.image }}" alt="">
				{% endfor %}
				
			</div>

	</section>

	<section class="mydiv" id="projects">
		<h2>PORTFOLIO</h2>
		<ul>
			{% for project in projects %}
				<li><a href="{{ path('show-project', {'id': project.id}) }}">{{ project.name }}</a></li>
			{% endfor %}
		</ul>
	</section>

	<section class="mydiv" id="resume-front">
		<img src="{{ asset('build/images/logoport.png')}}" alt="">
	</section>
	<section class="mydiv" id="contact">
		<h2>GET IN TOUCH</h2>
		{% include 'flash_messages.html.twig' %}
		<div id="form">

			<form id="full" name="message" method="post" autocomplete="off">

				<label for="message_email">EMAIL
					<input type="email" id="message_email" name="message[email]" required="required" />
				</label>

				<label for="message_message" class="">MESSAGE
					<textarea id="message_message" name="message[message]" required="required"></textarea>
				</label>


				<button class="btn-send">Send</button>

			</form>
		</div>

		<div class="icon-bottom">
			<a href="https://github.com/Do0oV" target="_blank"><img class="git-bottom" src="{{ asset('build/images/github.svg')}}" alt=""></a>
			<a href=""><img class="none-bottom" src="{{ asset('build/images/linkedin.svg')}}" alt=""></a>
			<a href="https://www.linkedin.com/in/dorotheeviard/" target="_blank" ><img class="link-bottom" src="{{ asset('build/images/linkedin.svg')}}" alt=""></a>
		</div>
	</section>



{% endblock %}
