{% extends 'base.html.twig' %}

{% block title %}Resume index{% endblock %}

    {% block body %}
        <a href="{{ path('admin') }}">Back to Admin</a>
        
        <h1>Resume index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Company</th>
                    <th>Year</th>
                    <th>Content</th>
                    <th>Genre</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for resume in resumes %}
                    <tr>
                        <td>{{ resume.id }}</td>
                        <td>{{ resume.title }}</td>
                        <td>{{ resume.company }}</td>
                        <td>{{ resume.year }}</td>
                        <td>{{ resume.content }}</td>
                        <td>{{ resume.genre }}</td>
                        <td>
                            <a href="{{ path('resume_show', {'id': resume.id}) }}">show</a>
                            <a href="{{ path('resume_edit', {'id': resume.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('resume_new') }}">Create new</a>
    {% endblock %}