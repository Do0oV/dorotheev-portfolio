{% extends 'admin/base-admin.html.twig' %}

{% block title %}Edit About{% endblock %}

	{% block body %}
		<div class="edit container">
			<h2>Edit About</h2>
			<a href="{{ path('admin') }}"><button class="btn btn-primary btn-sm">BACK</button></a>
			<img src="{{ asset('upload/') }}{{ about.image }}" alt="alt image" style="width:60px;height:auto;">

			{{ form_start(form) }}

			{{ form_errors(form) }}

			{{ form_row(form.Text) }}
			{{ form_row(form.image) }}

			<button class="btn btn-warning btn-sm">{{ button_label|default('Save') }}</button>

			{{ form_end(form) }}

			{{ include('about/_delete_form.html.twig') }}
		</div>
	{% endblock %}
